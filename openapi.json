{
  "openapi": "3.0.0",
  "info": {
    "title": "Video Summarizer API",
    "version": "1.0.0"
  },
  "paths": {
    "/summarize": {
      "post": {
        "summary": "Summarize a video from its URL",
        "operationId": "summarizeVideo",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "description": "URL of the video"
                  }
                },
                "required": ["url"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transcript result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "transcript": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
